<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.normativas.NormativasFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:onClick="ieee802_3"
                android:background="@drawable/boton_normativa"
                android:drawableLeft="@drawable/ieee"
                android:text="Estándar\n\nIEEE 802.3\n\nEspecificaciones de\ncapa física y red"
                app:backgroundTint="#9E9C9C" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/boton_normativa"
                android:drawableLeft="@drawable/ieee"
                android:text="Estándar\n\nIEEE 802.5\n\nRedes de \nÁrea local (LAN)"
                android:textColor="@color/black"
                app:backgroundTint="#DAD9D9" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/boton_normativa"
                android:drawableLeft="@drawable/ieee"
                android:text="Estándar\n\nIEEE 802.11\n\nRedes inalámbricas"
                app:backgroundTint="#FF9E9C9C" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/boton_normativa"
                android:drawableLeft="@drawable/itu"
                android:text="Próximamente..."
                android:textColor="@color/black"
                app:backgroundTint="#FFDAD9D9" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/boton_normativa"
                android:drawableLeft="@drawable/itu"
                android:text="Proximamente..."
                app:backgroundTint="#FF9E9C9C" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/boton_normativa"
                android:drawableLeft="@drawable/itu"
                android:text="Próximamente..."
                android:textColor="@color/black"
                app:backgroundTint="#FFDAD9D9" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>