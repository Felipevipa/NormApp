<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/carta_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imagen_preguntas"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/titulo_preguntas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas"
                    android:layout_toRightOf="@id/imagen_preguntas"
                    android:text="¿Cuál es el objetivo para instalar Telecomunicaciones en tu empresa?"
                    android:textSize="15sp"
                    android:layout_marginBottom="9dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titulo_preguntas"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas"
                    android:layout_toRightOf="@id/imagen_preguntas"
                    android:text="Facilitar la movilidad de la información.\nAumentar la velocidad de procesos, la toma de decisiones y la seguridad de los datos."
                    android:textSize="12sp"></TextView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imagen_preguntas_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/titulo_preguntas_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas_2"
                    android:layout_toRightOf="@id/imagen_preguntas_2"
                    android:text="¿Cuáles son las soluciones disponibles en Telecomunicaciones en tu empresa?"
                    android:textSize="15sp"
                    android:layout_marginBottom="9dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/descripcion_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titulo_preguntas_2"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas_2"
                    android:layout_toRightOf="@id/imagen_preguntas_2"
                    android:text="Servidores, Switches, Centros de datos, telefonía IP, enlaces inalámbricos, cableado estructurado, sistemas de alimentación initerrumpidos (UPS)."
                    android:textSize="12sp"></TextView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imagen_preguntas_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/titulo_preguntas_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="9dp"
                    android:layout_toEndOf="@id/imagen_preguntas_3"
                    android:layout_toRightOf="@id/imagen_preguntas_3"
                    android:text="¿Cómo se identifica un dispositivo conectado a la red?"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/descripcion_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titulo_preguntas_3"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas_3"
                    android:layout_toRightOf="@id/imagen_preguntas_3"
                    android:text="La dirección IP, es el identificador que lleva consigo cada dispositivo que se conecta a Internet, sea el dispositivo que sea, en el momento en el que está conectado."
                    android:textSize="12sp"></TextView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imagen_preguntas_4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/titulo_preguntas_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_toEndOf="@id/imagen_preguntas_4"
                    android:layout_toRightOf="@id/imagen_preguntas_4"
                    android:text="¿Cuál es la mejor posición para colacar un router?"
                    android:textSize="13sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/descripcion_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titulo_preguntas_4"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas_4"
                    android:layout_toRightOf="@id/imagen_preguntas_4"
                    android:text="Lo ideal es dar sitio al router encima de una mesa o estantería. La señal WiFi se dirige tanto hacia arriba como hacia abajo. Por ese motivo, si el router se deja en el suelo, parte de ese ancho de banda se desaprovechará"
                    android:textSize="12sp"></TextView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imagen_preguntas_5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/titulo_preguntas_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="9dp"
                    android:layout_toEndOf="@id/imagen_preguntas_5"
                    android:layout_toRightOf="@id/imagen_preguntas_5"
                    android:text="¿Cuánto peso soporta un Rack?"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/descripcion_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titulo_preguntas_5"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas_5"
                    android:layout_toRightOf="@id/imagen_preguntas_5"
                    android:text="La estructura soporta hasta 3000 Kg por pallet y hasta 6000 kg en el plano de apoyo. El rack selectivo brinda rápido y fácil acceso a los productos almacenados."
                    android:textSize="12sp"></TextView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imagen_preguntas_6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/titulo_preguntas_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas_6"
                    android:layout_toRightOf="@id/imagen_preguntas_6"
                    android:text="¿Quién me dice cómo puedo hacer una tarea específica? "
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/descripcion_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titulo_preguntas_6"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas_6"
                    android:layout_toRightOf="@id/imagen_preguntas_6"
                    android:text="Múltiples organismos de estandarización te pueden ayudar. Dirígete a la pestaña de normativas para más información."
                    android:textSize="12sp"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imagen_preguntas_7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/titulo_preguntas_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="9dp"
                    android:layout_toEndOf="@id/imagen_preguntas_7"
                    android:layout_toRightOf="@id/imagen_preguntas_7"
                    android:text="¿Dónde puedo encontrar información acerca de los equipos de mi empresa?"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/descripcion_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titulo_preguntas_7"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"

                    android:layout_toEndOf="@id/imagen_preguntas_7"
                    android:layout_toRightOf="@id/imagen_preguntas_7"
                    android:textSize="12sp"
                    android:text="Dirígete a la pestaña de equipos y busca la referencia que desees, si no la encuentras puedes buscar más información por internet. "
                    android:textStyle="bold"></TextView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imagen_preguntas_8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/titulo_preguntas_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="9dp"
                    android:layout_toEndOf="@id/imagen_preguntas_8"
                    android:layout_toRightOf="@id/imagen_preguntas_8"
                    android:text="¿Cómo descargar una aplicación móvil?"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/descripcion_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titulo_preguntas_8"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagen_preguntas_8"
                    android:layout_toRightOf="@id/imagen_preguntas_8"
                    android:textSize="12sp"
                    android:text="No lo sé, ¿Cómo descargaste esta en primer lugar?"></TextView>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>
